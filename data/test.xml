
<!-- RESOURCES (added in memory) -->
<resources>

  <!-- Fonts (default size is 30) -->
  <font name="TextFont" src="data/dejavu.ttf" size="12" />
  <font name="TitleFont" src="data/yorkville.ttf" size="23" />

  <!-- Images -->
  <image name="NormalButton" src="data/btnNormal.png" />
  <image name="HoveredButton" src="data/btnHover.png" />
  <image name="PressedButton" src="data/btnPressed.png" />

</resources>




<!-- Default styles for basic widgets (BI: BuiltIn) -->

<!-- LABEL -->
<style name="BI_Label" font="TextFont" color="rgba: 0,0,0,0" textSize="12" textColor="#000000" focusable="0" />

<!-- WINDOW -->
<style name="BI_Window" movable="1" blocked="1" color="rgba: 255, 123, 223, 255" />
<style name="BI_Window->Title" font="TitleFont" textSize="12" align="top_center" />

<!-- TEXT INPUT -->
<style name="BI_TextInput" width="200" height="20" color="#666666" maxLength="0" selectionColor="rgba:255,255,255,123" textColor="#FFFFFF" editable="1" />

<!-- TEXT BUTTON -->
<style name="BI_TextButton" image="NormalButton" color="rgba:0,0,0,0" width="70" height="30" />
<style name="BI_TextButton->Label" textColor="#000000" align="center" x="0" y="0" />

<style name="BI_TextButton_Hovered" image="HoveredButton" />
<style name="BI_TextButton_Hovered->Label" textColor="#000000" align="center" x="0" y="0" />

<style name="BI_TextButton_Pressed" image="PressedButton" />
<style name="BI_TextButton_Pressed->Label" textColor="rgba: 0,0,0,123" align="center" x="1" y="1" />

<!-- CHECKBOX -->
<style name="BI_CheckBox" width="150" />
<style name="BI_CheckBox->Button" width="20" height="20" image="NormalButton" align="left" />
<style name="BI_CheckBox->Label" x="25" align="left" textColor="#000000"  />

<style name="BI_CheckBox_Checked->Label" textColor="#FF0000" />
<style name="BI_CheckBox_Checked->Button" image="PressedButton" />

